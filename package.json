{
  "name": "courses",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24 <25"
  },
  "workspaces": [
    "scrape",
    "app",
    "db"
  ],
  "scripts": {
    "dev": "bun --filter @courses/app dev",
    "build": "turbo run build",
    "preview": "bun --filter @courses/app preview",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "check": "turbo run lint format:check typecheck",
    "fix": "turbo run lint:fix format",
    "git:safe:commit": "lint-staged",
    "git:safe:push": "turbo run lint typecheck build",
    "scrape:evals": "bun --filter @courses/scrape run scrape:evals",
    "scrape:courses": "bun --filter @courses/scrape run scrape:courses",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@tanstack/eslint-plugin-router": "^1.155.0",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "latest",
    "add": "^2.0.6",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "oxlint-tsgolint": "^0.12.1",
    "router": "^2.2.0",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "oxlint --type-aware --fix --import-plugin --max-warnings=0",
    "*.{ts,tsx,js,jsx,json,css,md}": "oxfmt"
  },
  "packageManager": "bun@1.3.9"
}
