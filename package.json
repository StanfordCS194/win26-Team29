{
  "name": "courses",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24 <25"
  },
  "workspaces": [
    "scrape",
    "app",
    "db"
  ],
  "scripts": {
    "dev": "pnpm --filter @courses/app dev",
    "build": "pnpm --filter @courses/app build",
    "preview": "pnpm --filter @courses/app preview",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --fix --cache",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "pnpm -r --if-present typecheck",
    "test": "pnpm --filter @courses/app test",
    "check": "concurrently -g \"pnpm lint\" \"pnpm typecheck\"",
    "fix": "concurrently -g \"pnpm lint:fix\" \"pnpm format\"",
    "git:safe:commit": "lint-staged",
    "git:safe:push": "concurrently -g \"pnpm lint\" \"pnpm typecheck\" \"pnpm build\"",
    "scrape:evals": "pnpm --filter @courses/scrape run scrape:evals",
    "scrape:courses": "pnpm --filter @courses/scrape run scrape:courses",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/core": "^1.1.0",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@tanstack/eslint-config": "^0.3.4",
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@tanstack/eslint-plugin-router": "^1.155.0",
    "@types/eslint-plugin-security": "^3.0.1",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-n": "^17.23.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.7",
    "eslint-plugin-unused-imports": "^4.4.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vue-eslint-parser": "^10.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix --max-warnings=0",
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  },
  "packageManager": "pnpm@10.28.2+sha512.41872f037ad22f7348e3b1debbaf7e867cfd448f2726d9cf74c08f19507c31d2c8e7a11525b983febc2df640b5438dee6023ebb1f84ed43cc2d654d2bc326264"
}
